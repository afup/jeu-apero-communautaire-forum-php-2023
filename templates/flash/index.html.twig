{% extends 'base.html.twig' %}

{% block content %}
    <div class="container text-center">
        <div class="col-lg-6 mx-auto">
            <p class="lead my-5">Vous avez flashé <span style="font-weight: 600;">{{ code }}</span></p>

            {% if flash.isSuccess is defined and flash.isSuccess %}

                <p class="lead mt-5 mb-2"><span style="font-weight: 600;">BRAVO !</span></p>
                <svg xmlns="http://www.w3.org/2000/svg" width="130" height="130" fill="currentColor"
                     class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>

                <p class="lead mt-5"><span style="font-weight: 600;">{{ code }}</span> fait bien partie de votre équipe <span style="font-weight: 600;">{{ flash.flashed.team.name|upper }}</span></p>
                <p class="lead">Vous avez fait progresser celle-ci un peu plus vers la victoire !</p>

            {% elseif flash.isSuccess is defined %}
                <p class="lead mt-5 mb-2"><span style="font-weight: 600;">Et non...</span></p>
                <svg xmlns="http://www.w3.org/2000/svg" width="130" height="130" fill="currentColor"
                     class="bi bi-check-circle-fill text-danger" viewBox="0 0 16 16">
                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>

                </svg>

                <p class="lead my-5"><span style="font-weight: 600;">{{ code }}</span> fait partie de l'équipe <span style="font-weight: 600;">{{ flash.flashed.team.name|upper }}</span></p>

            {% endif %}

            <p class="my-5">
                <a href="{{ path('app_home') }}">Retour</a>
            </p>
        </div>
    </div>
{% endblock %}
